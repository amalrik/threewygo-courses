<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New course</h1>

  <%#= render "form", course: @course %>
  <%= form_with(model: [@course, @video]) do |form| %>
    <div>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.hidden_field :course_id, { value: @course.id } %>
      <%= form.file_field :video %>
    </div>

    <div>
      <%= form.submit class: "mt-2 rounded-lg py-3 px-5 bg-blue-100 inline-block font-medium"  %>
    </div>
  <% end %>

  <%= link_to "Back to courses", courses_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>