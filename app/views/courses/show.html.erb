<div class="mx-auto md:flex">
  <div>
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @course %>

      <%= link_to "Edit this course", edit_course_path(@course), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Back to courses", courses_path, class: "mt-2 md:mt-0 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block mt-2 md:mt-0">
        <%= button_to "Destroy this course", @course, method: :delete, class: "rounded-lg py-3 px-5 bg-red-100 font-medium" %>
      </div>
    <%= link_to 'Add video to this course', new_course_video_path(@course), class: "rounded-lg py-3 px-5 bg-blue-100 font-medium" %>
  </div>
  <div>
    <h2 class="text-xl font-semibold mt-8 md:mt-2">Video list</h1>
    <ul class="divide-y divide-gray-100">
      <%= render partial: 'video', collection: @videos, as: :video %>
    </ul>
  </div>
</div>